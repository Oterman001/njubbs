        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_peopleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
		android:layout_margin="10dp"
        android:text="77人"
        android:textSize="16sp" />
</RelativeLayout>