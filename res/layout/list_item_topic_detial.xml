<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00ff0000"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >
    
    <!-- android:descendantFocusability="blocksDescendants"  -->

    <!-- 楼层 -->
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_topic_detail_item_floorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="第1楼"
        android:textColor="#7000" />

    <TextView
        android:id="@+id/tv_topic_detail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_detail_item_floorth"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:text="这是回复内容"
        android:textColor="#000"
        android:textSize="17sp" />

    <!-- 时间 -->
    <TextView
        android:id="@+id/tv_topic_detail_item_pubtime"
        style="@style/item_topten_style"
        android:layout_below="@id/tv_topic_detail_item_content"
        android:layout_marginLeft="8dp"
        android:text="2016-02-02 18:50" />
    <!-- 作者 -->
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_topic_detail_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_topic_detail_item_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/ic_gender_female"
        android:textColor="#7000"
        android:text="Oterman" />

</RelativeLayout>