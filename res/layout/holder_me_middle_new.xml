<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_mail"
        style="@style/option_item_rl2" >

        <ImageView
            style="@style/option_item_img"
            android:background="@drawable/icon_my_message"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_mail"
            style="@style/option_item_text"
            android:clickable="true"
            android:text="站内" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/rl_blog"
        style="@style/option_item_rl2" >

        <ImageView
            style="@style/option_item_img"
            android:background="@drawable/icon_my_blog"
            android:contentDescription="@null" />

        <TextView
            style="@style/option_item_text"
            android:text="设置" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/rl_note"
        style="@style/option_item_rl2" >

        <ImageView
            style="@style/option_item_img"
            android:background="@drawable/icon_my_note"
            android:contentDescription="@null" />

        <TextView
            style="@style/option_item_text"
            android:text="打赏" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

    <LinearLayout
        android:id="@+id/rl_team"
        style="@style/option_item_rl2" >

        <ImageView
            style="@style/option_item_img"
            android:background="@drawable/icon_my_team"
            android:contentDescription="@null" />

        <TextView
            style="@style/option_item_text"
            android:text="反馈" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/list_divider_color" />

</LinearLayout>