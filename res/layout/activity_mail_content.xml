<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_mail_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="这是标题"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mail_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
            android:text="发信人：author"
            android:textColor="#8000" />

        <TextView
            android:id="@+id/tv_mail_posttime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="时    间：2016年12月1日    12：21"
            android:textColor="#8000" />

        <TextView
            android:id="@+id/tv_mail_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="这是内容这是内容这是内容这是内容这这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容是这是内容这是内容这是内容内容这是内容"
            android:textColor="#000"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

</ScrollView>