<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_user_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- android:background="@color/main_green" -->

    <TextView
        android:id="@+id/tv_user_id"
        style="@style/about_me_user_detail" />

    <TextView
        android:id="@+id/tv_user_nickname"
        style="@style/about_me_user_detail"
        android:layout_below="@id/tv_user_id" />

    <TextView
        android:id="@+id/tv_user_biaoxianzhi"
        style="@style/about_me_user_detail"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_user_id" />

    <TextView
        android:id="@+id/tv_user_jingyan"
        style="@style/about_me_user_detail"
        android:layout_below="@id/tv_user_nickname" />

    <!-- 生命力 -->

    <TextView
        android:id="@+id/tv_user_shengmingli"
        style="@style/about_me_user_detail"
        android:layout_alignLeft="@id/tv_user_biaoxianzhi"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_user_nickname" />

    <!-- 星座 -->

    <TextView
        android:id="@+id/tv_user_xingzuo"
        style="@style/about_me_user_detail"
        android:layout_below="@id/tv_user_jingyan" />

    <!-- 上站次数 -->

    <TextView
        android:id="@+id/tv_user_totalvisit"
        style="@style/about_me_user_detail"
        android:layout_alignLeft="@id/tv_user_biaoxianzhi"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_user_jingyan" />

</RelativeLayout>