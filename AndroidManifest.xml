<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oterman.njubbs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.oterman.njubbs" />

    <!-- 为了能够更改actionbar的颜色 需要自定义主题 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.oterman.njubbs.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/my_theme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.oterman.njubbs.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/myindicatorStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.oterman.njubbs.activity.TopicDetailActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- android:windowSoftInputMode="adjustPan|stateHidden" -->
        <activity
            android:name="com.oterman.njubbs.activity.BoardDetailActivity"
            android:launchMode="singleTask" />
        <!-- android:launchMode="singleTask" -->
        <activity
            android:name="com.oterman.njubbs.activity.LoginActivity"
            android:label="登陆" />
        <activity
            android:name="com.oterman.njubbs.activity.BigImageActivity"
            android:label="图片" />
        <activity
            android:name="com.oterman.njubbs.activity.NewTopicActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity
            android:name="com.oterman.njubbs.activity.ModifyReplyActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity android:name=".activity.MailBoxActicity" />
        <activity android:name=".activity.MailContentActicity" />
        <activity
            android:name="com.oterman.njubbs.activity.MailReplyActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.oterman.njubbs.activity.MailNewActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
    </application>

</manifest>